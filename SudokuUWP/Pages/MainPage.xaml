        <Border x:Name="MainBorder" Grid.Column="0" Grid.Row="0" BorderBrush="#FF7ACF9D" BorderThickness="5 5 5 5"  Margin="5,15,5,2">
            <Border.Resources>
                <Storyboard x:Name="colorStoryboard">

                    <!-- Animate the background color of the canvas from red to pink and back continuously -->
                    <ColorAnimation Storyboard.TargetName="MainBorder" 
                        Storyboard.TargetProperty="(Border.BorderBrush).(SolidColorBrush.Color)"
                        From="Red" To="Pink" Duration="0:0:1" RepeatBehavior="Forever" AutoReverse="True" />
                </Storyboard>
            </Border.Resources>

